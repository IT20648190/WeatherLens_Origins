<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <TextView
            android:id="@+id/tv_titlewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_typewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="150dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_datewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/tv_titlewa"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_descwa"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_typewa"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="15dp"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/editwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_descwa"
            android:layout_alignParentStart="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="2dp"
            app:srcCompat="@drawable/edit" />

        <ImageButton
            android:id="@+id/deletewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_descwa"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="60dp"
            android:layout_toEndOf="@+id/editwa"
            app:srcCompat="@drawable/delete" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>